<h3>House Listings</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Company Name</th>
    <th>Location</th>
    <th>Size</th>
    <th>Year</th>
    <th>Style</th>
    <th>Price</th>
    <th>Floors</th>
    <th>Basement</th>
    <th>Owner</th>
    <th>Contact</th>
    <th>Listed By</th>

  </tr>
  </thead>

  <tbody>
  <% @houses.each do |house| %>
    <tr>
      <td><%= house.company.c_name %></td>
      <td><%= house.location %></td>
      <td><%= house.size %></td>
      <td><%= house.year %></td>
      <td><%= house.style %></td>
      <td><%= house.price %></td>
      <td><%= house.floors %></td>
      <td><%= house.basement %></td>
      <td><%= house.owner %></td>
      <td><%= house.contact %></td>
      <td><%= house.user.fname %></td>
      <% if current_user.is_admin || (current_user.is_hunter && session[:as_hunter]) || (house.user_id == current_user.id && current_user.is_realtor && session[:as_realtor]) %>
        <td><%= link_to 'Show', house %></td>
      <% end %>
      <% if (house.user_id == current_user.id && current_user.is_realtor && session[:as_realtor]) or current_user.is_admin %>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= button_to "delete", house, :method => "delete" %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if current_user.is_admin || current_user.is_realtor %>
  <%= link_to 'New House ||', new_house_path %>
<% end %>

<% if session[:dual_role] %>
  <% if session[:as_realtor] %>
    <%= link_to 'Back', home_index_path %>
  <% else %>
    <%= link_to 'Back', hunter_index_path %>
  <% end %>
<% else %>
  <%= link_to 'Back', home_index_path %>
<% end %>

