<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6 mb-3">
    <%= form.label :c_name , 'Company Name' %>
    <%= form.text_field(:c_name ,{:class=>'form-control'} )%>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.label :website , 'Company Website'%>
    <%= form.text_field :website,{:class=>'form-control'} %>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.label :address ,'Location of Head Quarters'%>
    <%= form.text_field :address ,{:class=>'form-control'}%>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.label :size ,'Numeber of Realtors'%>
    <%= form.number_field :size,{:class=>'form-control'} %>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.label :year ,'Established in year(YYYY)'%>
    <%= form.number_field :year ,{:class=>'form-control'}%>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.label :revenue ,'Revenue(in millions)'%>
    <%= form.number_field :revenue,{:class=>'form-control'} %>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.label :synopsis,'Synopsis'%>
    <%= form.text_area :synopsis,{:class=>'form-control'} %>
  </div>

  <div class="col-md-6 mb-3">
    <%= form.submit "Creat new company", :class=>"active btn btn-primary" %>
  </div>
<% end %>
