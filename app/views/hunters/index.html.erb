<p id="notice"><%= notice %></p>

<h1>Hunters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Contact mode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hunters.each do |hunter| %>
      <tr>
        <td><%= hunter.user.name %></td>
        <td><%= hunter.user.email %></td>
        <td><%= hunter.user.phone %></td>
        <td><%= hunter.contact_mode %></td>
        <td><%= link_to 'Show', hunter %></td>
        <td><%= link_to 'Edit', edit_hunter_path(hunter) %></td>
        <td><%= link_to 'Destroy', hunter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

