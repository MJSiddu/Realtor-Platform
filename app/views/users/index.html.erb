
<h3>List of Users</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Contact Number</th>
    <th>Is Realter?</th>
    <th>Is House Hunter?</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <% if !user.is_admin %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.email %></td>
        <td><%= user.contact %></td>
        <td><%= user.is_realtor %></td>
        <td><%= user.is_hunter %></td>
        <td><%= link_to 'Show User Details', user, :class=>"active btn btn-success" %></td>
        <td><%= link_to 'Edit User Details', edit_user_path(user), :class=>"active btn btn-primary" %></td>
        <td><%= button_to "Delete User", user, :method => "delete", :class=>"active btn btn-danger" %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class=>"active btn btn-dark" %>
<%= link_to 'Back', home_index_path, :class=>"active btn btn-dark" %>
