<h3>My Interest List</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Company</th>
    <th>House Location</th>
    <th>House Owner</th>
    <th>House Floors</th>
    <th>House Price</th>
  </tr>
  </thead>
  <tbody>
  <% @user_buyers.each do |fav| %>
    <tr>
      <td><%= fav.house.company.c_name %></td>
      <td><%= fav.house.location %></td>
      <td><%= fav.house.owner %></td>
      <td><%= fav.house.floors %></td>
      <td><%= fav.house.price %></td>
      <td><%= button_to "Remove From Interest List", fav, :method => "delete" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<% if session[:dual_role] %>
  <% if session[:as_realtor] %>
    <%= link_to 'Back', home_index_path %>
  <% else %>
    <%= link_to 'Back', hunter_index_path %>
  <% end %>
<% else %>
  <%= link_to 'Back', home_index_path %>
<% end %>