
<h3>Potential Buyers</h3>

<table class="table table-striped" >
  <thead>
    <tr>
      <th>House Belongs To</th>
      <th>House Location</th>
      <th>Interested User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.house.company.c_name %></td>
        <td><%= buyer.house.location %></td>
        <td><%= buyer.user.fname %></td>
        <td><%= link_to 'Display User', user_path(buyer.user_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

